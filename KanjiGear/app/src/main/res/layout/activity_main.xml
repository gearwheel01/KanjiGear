<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">


    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/button_secondary"
        android:onClick="openStatistics"
        android:text="Statistics"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_quickLesson2" />

    <TextView
        android:id="@+id/itemCompKanji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Kanji Gear"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_quickLesson"
        android:layout_width="316dp"
        android:layout_height="104dp"
        android:layout_marginBottom="328dp"
        android:background="@color/button_green"
        android:backgroundTintMode="screen"
        android:onClick="openQuickLesson"
        android:text="Quick lesson"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemCompKanji" />

    <Button
        android:id="@+id/button_quickLesson2"
        android:layout_width="316dp"
        android:layout_height="73dp"
        android:layout_marginTop="72dp"
        android:background="@color/button_green"
        android:backgroundTintMode="screen"
        android:onClick="openStudyLists"
        android:text="Study Lists"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_quickLesson" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_secondary"
        android:onClick="openDictionary"
        android:text="Dictionary"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_quickLesson2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_secondary"
        android:onClick="openAbout"
        android:text="About"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

</androidx.constraintlayout.widget.ConstraintLayout>