<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemCompWordWritingWriting"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:background="@color/teal_700"
        android:elevation="0dp"
        android:text="writing"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/itemCompWordWritingButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_additem"
        app:layout_constraintStart_toEndOf="@+id/itemCompWordWritingWriting"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/itemCompWordWritingUp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/arrow_up"
        app:layout_constraintStart_toEndOf="@+id/itemCompWordWritingWriting"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/itemCompWordWritingDown"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/arrow_down"
        app:layout_constraintStart_toEndOf="@+id/itemCompWordWritingWriting"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>